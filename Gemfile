source 'https://rubygems.org'

gem 'creatable'
gem 'excon'
gem 'gli'
gem 'oj'
gem 'codecov', :require => false, :group => :test

group :test do
  gem 'bump'
  gem 'bundler'
  gem 'rake'
  gem 'rspec'
  gem 'rubocop'
  gem 'rubocop-rspec'
  gem 'simplecov'
  gem 'yard'
end

group :development, optional: true do
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-livereload'
  gem 'guard-rspec'
  gem 'guard-rubocop'
  gem 'guard-shell'
  gem 'guard-yard'
  gem 'pry'
  gem "pry-inline"
  gem "solargraph"
end
